@inject CoaBookingService service
@inject SelectListService SelectListService
@model CoaCaseSearchViewModel

@{
    ViewData["Title"] = "Request a Hearing Date";
    bool showingDates = Model.Results != null && Model.Results.Any();
}

<div class="row screen-intro">
    <div class="col-md-12">
        <h1>@ViewData["Title"]</h1>

        <div class="paragraph">
            <p>All bookings will be entered in a queue and will be reviewed by the court scheduler.</p>
            <p>You will be notified by email when the booking has been confirmed.</p>
        </div>

        <div class="paragraph">
            <p>Please answer the following questions:</p>
        </div>
    </div>
</div>

<form method="post" id="CaseSearchForm">
    <input type="hidden" id="CaseType" name="CaseType" value="@Model.CaseType" />
    <input type="hidden" id="IsValidCaseNumber" name="IsValidCaseNumber" value="@Convert.ToString(Model.IsValidCaseNumber.Value)" />
    <input type="hidden" id="SelectedDate" name="SelectedDate" />
    <!-- Search filter-->
    <div class="row search-container">
        <div class="col col-md-12">
            <div class="search-info border">
                <div class="row search-info-row">
                    <div class="col-md-6 form-group">
                        <label for="hearingLocation">Where will the hearing occur.</label>
                        <div class="align-tooltip">
                            <select class="form-control registryOptions" id="hearingLocation" disabled>
                                <option value="Vancouver">Vancouver </option>
                            </select>
                            <span class="pl-2" tabindex="0" data-toggle="tooltip" data-html="true" title="<p>Online booking is currently active for Vancouver hearing dates only.</p>" aria-label="Online Booking is currently active for Vancouver Hearing dates only.">
                                <i class="fas fa-question-circle"></i>
                            </span>
                        </div>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="CaseNumber">What is the court file number for the case?</label>
                        <div class="align-tooltip">
                            <div>
                                @if (Model.Step1Complete)
                                {
                                    <input class="form-control caseNumber" asp-for="CaseNumber" disabled="@(true)" />
                                    <input type="hidden" asp-for="CaseNumber" value="@Model.CaseNumber" />
                                }
                                else if (Model.CaseNumber != null && Model.CaseNumber != "CA" && !(Model.IsValidCaseNumber ?? false))
                                {
                                    <input class="form-control caseNumber" asp-for="CaseNumber" disabled="@(true)" />
                                }
                                else
                                {
                                    <input class="form-control caseNumber" asp-for="CaseNumber" value="CA" />
                                }
                            </div>
                            <span class="pl-2" tabindex="0" data-toggle="tooltip" data-html="true" title="<p>The court file number is often in the format of CA##### (ex. CA12345). Please remove any leading zeros (0) before the number and CA.</p><p>Please ensure that you have confirmed your court file number.</p>" aria-label="The Court File Number is often in the format of CA##### (ex. CA12345). Please remove any leading zeros (0) before the number and CA. Please ensure that you have confirmed your court file number.">
                                <i class="fas fa-question-circle"></i>
                            </span>
                        </div>
                        <span class="text-danger" asp-validation-for="CaseNumber"></span>
                    </div>
                </div>

                @if (Model.Step1Complete)
                {
                    @if (Model.CaseList.Length > 1)
                    {
                        <div class="row search-info-row related-cases">
                            <div class="col-md-12">
                                <label>Please select the related file numbers that will be heard on the same date.</label>
                                <p>Note: Only one related file number can be requested in a hearing unless the main file number is also included.</p>
                                <ul>
                                    @if (showingDates)
                                    {
                                        @foreach (var x in Model.CaseList)
                                        {
                                            <li>
                                                <input type="checkbox" name="SelectedCases" value="@x.Case_Num" checked="@((Model.SelectedCases != null && Model.SelectedCases.Contains(x.Case_Num)))" disabled="@(true)" data-main="@(x.Main)" />

                                                @if ((Model.SelectedCases != null && Model.SelectedCases.Contains(x.Case_Num)))
                                                {
                                                    <input type="hidden" name="SelectedCases" value="@x.Case_Num" checked />
                                                }
                                                <label>@x.Case_Num @((x.Main) ? "(Main)" : "")</label>
                                            </li>
                                        }
                                    }

                                    else
                                    {
                                        @foreach (var x in Model.CaseList)
                                        {
                                            <li>
                                                <input type="checkbox" name="SelectedCases" value="@x.Case_Num" checked="@(x.Case_Num == Model.CaseNumber || (Model.SelectedCases != null && Model.SelectedCases.Contains(x.Case_Num)))" readonly="@(Model.Step2Complete || x.Case_Num == Model.CaseNumber)" data-main="@(x.Main)" />
                                                @if (x.Case_Num == Model.CaseNumber)
                                                {
                                                    <input type="hidden" name="SelectedCases" value="@x.Case_Num" checked />
                                                }
                                                <label>@x.Case_Num @((x.Main) ? "(Main)" : "")</label>
                                            </li>
                                        }
                                    }
                                </ul>
                                <div class="alert alert-warning  alert--related-cases">
                                    <i class="fa fa-exclamation-triangle"></i>
                                    Only one related file number can be requested in a hearing unless the main file number is also included. If you require assistance for your booking, please contact the scheduler at 604-660-2865.
                                </div>
                            </div>
                        </div>
                    }

                    <div class="preliminary_questions preliminary_questions--Civil">
                        <div id="" class="row search-info-row">
                            <div class="col-md-6">
                                <label class="can-wrap">
                                    What hearing are you trying to book?
                                </label>
                                <div class="btn-radio-group preliminary_questions__radio">
                                    <label class="btn btn-radio btn-radio--secondary @((Model.IsAppealHearing ?? false) ? "active" : "") @(Model.Step2Complete ? "disabled" : "")">
                                        <input type="radio" asp-for="IsAppealHearing" value="true" checked="@(Model.IsAppealHearing)" readonly="@(Model.Step2Complete ? "readonly" : "")" /> Appeal
                                    </label>

                                    <label class="btn btn-radio btn-radio--secondary @((Model.IsAppealHearing ?? true) ? "" : "active") @(Model.Step2Complete ? "disabled" : "")">
                                        <input type="radio" asp-for="IsAppealHearing" value="false" checked="@(!Model.IsAppealHearing)" readonly="@(Model.Step2Complete ? "readonly" : "")" /> Chambers
                                    </label>
                                </div>
                                <span class="text-danger" asp-validation-for="IsAppealHearing"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="can-wrap">Is the hearing date agreed upon by all parties?</label>
                                <div id="DateIsAgreed" class="btn-radio-group preliminary_questions__radio">
                                    <label class="btn btn-radio @((Model.DateIsAgreed ?? false) ? "active" : "") @(Model.Step2Complete ? "disabled" : "")">
                                        <input type="radio" asp-for="DateIsAgreed" value="true" readonly="@(Model.Step2Complete ? "readonly" : "")" /> Yes
                                    </label>

                                    <label class="btn btn-radio @((Model.DateIsAgreed ?? true) ? "" : "active") @((showingDates && (Model.DateIsAgreed ?? false)) || Model.Step2Complete  ? "disabled" : "")">
                                        <input type="radio" asp-for="DateIsAgreed" value="false" readonly="@(Model.Step2Complete ? "readonly" : "")" /> No
                                    </label>
                                </div>

                                <span class="text-danger" asp-validation-for="DateIsAgreed"></span>

                                <div class="alert alert-warning alert--preliminary_question">
                                    <i class="fa fa-exclamation-triangle"></i>
                                    You will not be able to book a hearing of appeal until all parties agree upon a date.
                                    If you require assistance for your booking, please contact the scheduler at
                                    <span class="nowrap">604-660-2865</span>.
                                </div>
                            </div>
                        </div>
                    </div>

                    if (Model.Step2Complete)
                    {
                        if (Model.IsAppealHearing.Value)
                        {
                            <div class="preliminary_questions preliminary_questions--Appeal">
                                <div class="row search-info-row">
                                    <div class="col-md-6">
                                        <label class="factum can-wrap">
                                            Has the Appellant filed their factum and a copy of the entered order(s) being appealed? See Rule 32.
                                        </label>
                                        <div id="Appeal_CertificateOfReadiness" class="btn-radio-group preliminary_questions__radio">
                                            <label class="btn btn-radio @((Model.CertificateOfReadiness ?? false) ? "active" : "") @(Model.Step3Complete ? "disabled" : "")">
                                                <input type="radio" asp-for="CertificateOfReadiness" value="true" readonly="@(Model.Step3Complete ? "readonly" : "")" /> Yes
                                            </label>

                                            <label class="btn btn-radio @((Model.CertificateOfReadiness ?? true) ? "" : "active") @((showingDates && (Model.CertificateOfReadiness ?? false)) || Model.Step3Complete ? "disabled" : "")">
                                                <input type="radio" asp-for="CertificateOfReadiness" value="false" readonly="@(Model.Step3Complete ? "readonly" : "")" /> No
                                            </label>
                                        </div>

                                        <span class="text-danger" asp-validation-for="CertificateOfReadiness"></span>

                                        <div class="notice--preliminary_question">
                                            <span>Your hearing will not be confirmed unless the Order(s) of the Lower Court are submitted.</span>
                                        </div>
                                        <div class="alert alert-warning  alert--preliminary_question">
                                            <i class="fa fa-exclamation-triangle"></i>
                                            You will not be able to book a hearing date for the appeal until these two steps have been taken.
                                            If you require assistance with your booking, please contact the scheduler at
                                            <span class="nowrap">604-660-2865</span>.
                                        </div>
                                    </div>
                                </div>

                                <div id="AppealAdditionalQs" class="row search-info-row" style="display: @(Model.CertificateOfReadiness ?? false ? "block" : "none")">
                                    <div class="col-md-6">
                                        <label>How long will you require for your hearing?</label>
                                        <div id="Appeal_IsFullDay" class="btn-radio-group">
                                            <label class="btn btn-radio btn-radio--day  @((Model.IsFullDay ?? true) ? "" : "active") @(showingDates ? "disabled" : "")">
                                                <input type="radio" asp-for="IsFullDay" value="false" readonly="@(showingDates ? "readonly" : "")" /> Half day
                                            </label>

                                            <label class="btn btn-radio btn-radio--day  @((Model.IsFullDay ?? false) ? "active" : "") @(showingDates ? "disabled" : "")">
                                                <input type="radio" asp-for="IsFullDay" value="true" readonly="@(showingDates ? "readonly" : "")" /> Full day
                                            </label>
                                        </div>
                                        <span class="text-danger" asp-validation-for="IsFullDay"></span>
                                    </div>
                                </div>

                            </div>
                        }
                        else
                        {
                            <div class="preliminary_questions preliminary_questions--Chambers">
                                <div class="row search-info-row">
                                    <div class="col-md-6">
                                        <label class="application_type can-wrap">
                                            Please select the application type(s) for this chambers hearing.
                                        </label>
                                        @Html.DropDownListFor(x => x.SelectedApplicationTypes, new MultiSelectList(Model.ChambersApplicationTypes, "HearingTypeID", "ApplicationTypeName", Model.SelectedApplicationTypes))

                                        <span class="text-danger" asp-validation-for="SelectedApplicationTypes"></span>

                                        <div class="notice--preliminary_question">
                                            <span>Your hearing will not be confirmed unless the Order(s) of the Lower Court are submitted.</span>
                                        </div>
                                        <div class="alert alert-warning  alert--preliminary_question">
                                            <i class="fa fa-exclamation-triangle"></i>
                                            You will not be able to book a hearing date for the appeal until these two steps have been taken.
                                            If you require assistance with your booking, please contact the scheduler at
                                            <span class="nowrap">604-660-2865</span>.
                                        </div>
                                    </div>
                                </div>

                                <div id="ChambersAdditionalQs" class="row search-info-row">
                                    <div class="col-md-6">
                                        <label>How long will you require for your chambers hearing.</label>
                                        <p>If you require more than 2 hours, please contact the Registry.</p>
                                        <div id="Chambers_TimeRequired" class="btn-radio-group">
                                            <label class="btn btn-radio btn-radio--time_required  @((Model.HalfHourRequired ?? true) ? "" : "active") @(showingDates && Model.HalfHourRequired == false ? "disabled" : "")">
                                                <input type="radio" asp-for="HalfHourRequired" value="true" disabled="@(showingDates && Model.HalfHourRequired == false)" /> Half hour
                                            </label>

                                            <label class="btn btn-radio btn-radio--time_required  @((Model.HalfHourRequired ?? false) ? "active" : "") @(showingDates && Model.HalfHourRequired == true ? "disabled" : "")">
                                                <input type="radio" asp-for="HalfHourRequired" value="false" disabled="@(showingDates && Model.HalfHourRequired == true)" /> One hour
                                            </label>
                                        </div>
                                        <span class="text-danger" asp-validation-for="HalfHourRequired"></span>
                                    </div>
                                </div>

                            </div>
                        }
                    }
                }
            </div>

            @if (Model.Results == null)
            {
                <div class="row">
                    <div class="col-6 col-md-4 col-lg-3">
                        @if (!Model.Step1Complete)
                        {
                            <button type="submit" id="btnNext" name="SubmitButton" value="SearchCases" class="btn btn-primary btn-block mt-2">Next</button>
                        }
                        else if (!Model.Step2Complete)
                        {
                            <button type="submit" id="btnNext" name="SubmitButton" value="HearingType" class="btn btn-primary btn-block mt-2">Next</button>
                        }
                        else
                        {
                            <button type="submit" id="btnShowDates" name="SubmitButton" value="GetDates" class="btn btn-primary btn-block mt-2" style='display: none;'>Show Available Dates</button>
                        }
                    </div>
                </div>
            }

            @if (Model.CaseNumber != null && Model.CaseNumber != "CA" && !(Model.IsValidCaseNumber ?? false))
            {
                <hr class="results-linebreak" />
                <div class="alert alert-warning">
                    <i class="fa fa-exclamation-triangle"></i>
                    We could not find the case for court file number @Model.CaseNumber<span>.</span>
                </div>
            }
        </div>
    </div>
</form>

@if (showingDates)
{
    <hr class="results-linebreak" />
    <h5>Available Dates for @Model.HearingTypeName</h5>
    <p>Choose the date that works best for you. Each hearing is @((Model.IsFullDay ?? false) ? "full day" : "half day") long.</p>

    <div class="availableDates">
        @{
            var monthIndex = 0;

            foreach (var month in Model.Results)
            {
                var days = month.Value;
                <div class="availableDates__month @monthIndex @((monthIndex == 0 || monthIndex == 1) ? "" : "hidden")">
                    <h6 class="h3--month">@month.Key.ToString("MMMM yyyy")</h6>
                    <div class="availableDates__month__days">
                        @foreach (var day in days)
                        {
                            <a class="btn btn-primary availableDate" data-date="@day.ToString("yyyy-MM-dd")">
                                <p>@day.ToString("dddd")</p>
                                <p>@day.ToString("MMMM d, yyyy")</p>
                            </a>
                            <br />
                        }
                        <br />
                    </div>
                </div>
                monthIndex++;
            }
        }
    </div>

    <button id="btnShowMore" class="btn btn-outline-primary btn-lg">Show More Dates</button>
}

<div class="row mt-2">
    <div class="col col-md-12">
        <a href="/scjob/booking/coa/Restart">Restart Search</a>
    </div>
</div>
