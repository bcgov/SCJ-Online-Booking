@using Microsoft.Extensions.Configuration
@inject ScBookingService Service
@inject IConfiguration Configuration

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.CourtName = "supreme";
}

@section NavBar
{
    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
            @RenderSection("BookingsLeft", false)
            <li class="bookingsLeft">
                <span>@Service.GetHearingsRemaining()</span>
            </li>
            <li class="nav-item ml-5">
                <a href="@Configuration["AppSettings:LogoutUrl"]">LOGOUT</a>
            </li>
        </ul>
    </div>
}

@RenderBody()

@section Scripts {
    <script src="/scjob/js/sc.js" asp-append-version="true"></script>
    @RenderSection("Scripts", false)
}

@section Styles {
    @RenderSection("Styles", false)
    <link rel="stylesheet" href="/scjob/dist/css/sc.css" asp-append-version="true" />
}
