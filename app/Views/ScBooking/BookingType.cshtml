@inject SelectListService SelectListService

@model SCJ.Booking.MVC.ViewModels.ScCaseSearchViewModel

@{
    ViewData["Title"] = "BookingType";

    if (Model.AvailableConferenceTypeIds.Count == 1)
    {
        Model.HearingTypeId = Model.AvailableConferenceTypeIds.First();
    }
}

<div class="body-content--inner">
    <div class="d-flex justify-content-between steps-link">
        <h5>4 steps to complete your booking</h5>
        <h6><a href="/scjob/booking/sc">Cancel</a></h6>
    </div>
    <hr />
    <h6>Step 2</h6>
    <h2>Choose Your Booking Type</h2>

    <form method="post">
        @Html.HiddenFor(m => m.FullCaseNumber)
        @Html.HiddenFor(m => m.SelectedCaseId)
        @Html.HiddenFor(m => m.SelectedCourtClass)
        @Html.HiddenFor(m => m.LocationPrefix)
        @for (int i = 0; i < Model.AvailableConferenceTypeIds.Count; i++)
        {
            @Html.HiddenFor(m => m.AvailableConferenceTypeIds[i])
        }
        @for (int i = 0; i < Model.CourtFiles?.Length; i++)
        {
            @Html.HiddenFor(m => m.CourtFiles[i].courtClassCode)
            @Html.HiddenFor(m => m.CourtFiles[i].courtFileNumber)
            @Html.HiddenFor(m => m.CourtFiles[i].styleOfCause)
            @Html.HiddenFor(m => m.CourtFiles[i].physicalFileId)
            @Html.HiddenFor(m => m.CourtFiles[i].courtLevelCode)
        }

        <div>
            <div class="uppercase-sm">File Number: @Model.FileNumber</div>
            <h5 style="margin-bottom: 4px">@Model.SelectedCourtFile?.styleOfCause</h5>
            <p>@Model.SelectedCourtClassName</p>
        </div>

        <div class="row no-gutters">
            <div class="form-group booking-type-selection bg-white rounded p-3 p-sm-4">
                <h6>Choose your booking type</h6>
                <div class="btn-radio-group form-group">

                    <div class="form-check">
                        <input
                            asp-for="HearingTypeId"
                            class="form-check-input"
                            type="radio"
                            id="Trial"
                            name="HearingTypeId"
                            value="@ScHearingType.TRIAL"
                        />
                        <label for="Trial" class="form-check-label">Trial</label>
                    </div>

                    @foreach (var hearingTypeId in Model.AvailableConferenceTypeIds)
                    {
                        if (hearingTypeId == ScHearingType.CPC)
                        {
                            <div class="form-check">
                                <input asp-for="HearingTypeId" class="form-check-input" type="radio"
                                id="CPC" name="HearingTypeId"
                                value="@ScHearingType.CPC">
                                <label for="CPC" class="form-check-label">Case Planning Conference (CPC)</label>
                            </div>
                        }
                        else if (hearingTypeId == ScHearingType.JCC)
                        {
                            <div class="form-check">
                                <input asp-for="HearingTypeId" class="form-check-input" type="radio"
                                    id="JCC" name="HearingTypeId"
                                    value="@ScHearingType.JCC">
                                <label for="JCC" class="form-check-label">Judicial Case Conference (JCC)</label>
                            </div>
                        }
                        else if (hearingTypeId == ScHearingType.TMC)
                        {
                            <div class="form-check">
                                <input asp-for="HearingTypeId" class="form-check-input" type="radio"
                                    id="TMC" name="HearingTypeId"
                                    value="@ScHearingType.TMC">
                                <label for="TMC" class="form-check-label">Trial Management Conference (TMC)</label>
                            </div>
                        }
                    }
                </div>

                <div class="row no-gutters pb-3 pt-0">
                    <span asp-validation-for="HearingTypeId" class="text-danger"></span>
                </div>

                <p>
                    <a href="https://www.bccourts.ca/supreme_court/scheduling" target="_blank" rel="noopener">Contact the applicable Supreme Court scheduling office</a>
                    <i class="fa fa-external-link-alt"></i> by telephone for conference types not listed.
                </p>

                <div id="trial-additional-fields" class="mt-4" style="display: none;">
                    <div class="form-group mb-5">
                        <h6 class="mt-3 mb-4">
                            Estimated length of trial
                        </h6>

                        <div>
                            <input
                                class="mr-2 EstimatedTrialLength"
                                type="number"
                                min="0"
                                id="Trial"
                                asp-for="EstimatedTrialLength"
                                value="@Model.EstimatedTrialLength"
                                name="EstimatedTrialLength"
                            />
                            <span>days</span>

                            <div class="mt-2">
                                <span asp-validation-for="EstimatedTrialLength" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group btn-radio-group mb-5">
                        <h6 class="mt-3 mb-4">
                            Is the trial taking place in the home registry?
                        </h6>

                        <div class="form-check">
                            <input id="IsHomeRegistry--Yes" asp-for="IsHomeRegistry" class="form-check-input mr-3"
                                type="radio" name="IsHomeRegistry" value="true">
                            <label for="IsHomeRegistry--Yes" class="form-check-label">
                                Yes
                            </label>
                        </div>

                        <div class="form-check">
                            <input id="IsHomeRegistry--No" asp-for="IsHomeRegistry" class="form-check-input mr-3"
                                type="radio" name="IsHomeRegistry" value="false">
                            <label for="IsHomeRegistry--No" class="form-check-label">
                                No
                            </label>
                        </div>

                        <div>
                            <span asp-validation-for="IsHomeRegistry" class="text-danger"></span>
                        </div>
                    </div>

                    <div id="different-place-of-trial" class="form-group btn-radio-group mb-5">
                        <h6 class="mt-3 mb-4">
                            Do you have an entered court order changing the place of trial or is a different place of
                            trial stated on the initiating documents (e.g. Notice of Civil Claim, Notice of Family
                            Claim)?
                        </h6>

                        <div class="form-check">
                            <input id="IsDifferentPlaceOfTrial--Yes" asp-for="IsDifferentPlaceOfTrial"
                                class="form-check-input mr-3" type="radio" name="IsDifferentPlaceOfTrial" value="true">
                            <label for="IsDifferentPlaceOfTrial--Yes" class="form-check-label">
                                Yes
                            </label>
                        </div>

                        <div class="form-check">
                            <input id="IsDifferentPlaceOfTrial--No" asp-for="IsDifferentPlaceOfTrial"
                                class="form-check-input mr-3" type="radio" name="IsDifferentPlaceOfTrial" value="false">
                            <label for="IsDifferentPlaceOfTrial--No" class="form-check-label">
                                No
                            </label>
                        </div>

                        <div>
                            <span asp-validation-for="IsDifferentPlaceOfTrial" class="text-danger"></span>
                        </div>
                    </div>

                    <div id="trial-location-warning" class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-triangle"></i>
                        You must have an entered court order changing the place of trial or have a different place of trial
                        stated on the initiating document (eg. Notice of Civil Claim, Notice of Family Claim).
                    </div>

                    <div id="trial-location" class="form-group mb-5">
                        <h6 class="mt-3 mb-4">
                            Where will the trial be held?
                        </h6>

                        <select
                            asp-for="TrialLocation"
                            asp-items="SelectListService.SupremeLocations"
                            class="form-control TrialLocation"
                            id="TrialLocation"
                        >
                            <option value="">-- Pick a registry --</option>
                        </select>

                        <div>
                            <span asp-validation-for="TrialLocation" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row no-gutters">
            <div class="col-6 col-md-8 d-flex align-items-center text-link">
                <span>
                    <i class="fas fa-long-arrow-alt-left"></i>
                    <a href="select-case">Step 1: Find the Case for Your Hearing</a>
                </span>
            </div>
            <div class="col-6 col-md-4">
                <button type="submit" class="btn btn-primary btn-block">
                    Show Available Times
                </button>
            </div>
        </div>

    </form>
</div>
